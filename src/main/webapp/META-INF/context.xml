<Context antiJARLocking="true" path="/annotator-backend">
 <Resource
        name="jdbc/DASISHAnnotator"
        auth="Container"
        type="javax.sql.DataSource"
        driverClassName="org.postgresql.Driver"
        url="jdbc:postgresql:annotator"
        username="dasish"
        password="dasish"
        maxActive="10"
        maxIdle="5"
        maxWait="4000"
        removeAbandoned="false"
        removeAbandonedTimeout="10"
        logAbandoned="true" />
  <Parameter name="eu.dasish.annotation.backend.schemaLocation" 
             value="http://www.dasish.eu/ns/addit https://svn.clarin.eu/DASISH/t5.6/schema/trunk/annotator-schema/src/main/resources/DASISH-schema.xsd"/>
</Context>